<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <MarkerPatternSelector defaultPattern="%msg%n">
                    <PatternMatch key="START_END" pattern="%d{MM-dd-yyyy HH:mm:ss} - %msg%n"/>
                    <PatternMatch key="ERROR" pattern="%d{yyyy-MM-dd HH:mm:ss} %l %L %M - %msg%n"/>
                </MarkerPatternSelector>
            </PatternLayout>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>